<div class="card">
  <h2 class="card-header">
    Article Search
  </h2>
  <div class="card-body">
    <%= form_with url: search_articles_path, local: true, method: :get do  |f| %>
        <%= text_field_tag :id, params[:id], :placeholder => "Enter Article ID", class: "form-control me-2" %>
        <p>OR</p>
        <%= text_field_tag :title, params[:title], :placeholder => "Enter Article Title", class: "form-control me-2" %>
        <div class="actions mt-2">
            <%= f.submit "Search", class: "btn btn-success" %>
        </div>
    <% end %>    
  </div>
</div>

