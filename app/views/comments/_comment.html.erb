<div class="ms-4">
    <div class="comment_avatar_view">
        <iframe src="https://drive.google.com/file/d/<%= comment.user.avatar_url %>/preview" class="avatar"></iframe>
        <p class="m-2"><%= comment.user.name.upcase! %></p>
    </div>
    <p><%= comment.content %></p>
    <a href="#" class="comment-form-display">Reply</a>
    <div class="comment-form">
        <%= form_for [comment, Comment.new] do |f| %>
            <%= f.hidden_field :user_id, value: current_user.id %>
            <%= f.text_area :content, placeholder: "Add a Reply", class: "form-control" %><br/>
            <%= f.submit "Reply", class: "btn btn-info"  %>
        <% end %>
    </div>
    <div class="ms-4">
        <%= render partial: 'comments/comment', collection: comment.comments %>
    </div>
</div>