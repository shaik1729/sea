<p id="notice"><%= notice %></p>

<% if !current_user.is_student? %>

  <%= link_to 'New Notification', new_notification_path %>

  <h1>Your Notifications</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>User</th>
        <th>Regulation</th>
        <th>Batch</th>
        <th>Department</th>
        <th>Course</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @your_notifications.each do |notification| %>
        <tr>
          <td><%= notification.title %></td>
          <td><%= notification.user&.name %></td>
          <td><%= notification.regulation&.name %></td>
          <td><%= notification.batch&.name %></td>
          <td><%= notification.department&.name %></td>
          <td><%= notification.course&.name %></td>
          <td><%= link_to 'Show', notification %></td>
          <td><%= link_to 'Edit', edit_notification_path(notification) %></td>
          <td><%= link_to 'Destroy', notification, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
<% end %>


<h1>Notifications</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notifications&.each do |notification| %>
      <tr>
        <td><%= notification.title %></td>
        <td><%= link_to 'Show', notification %></td>
        <td><%= link_to 'Edit', edit_notification_path(notification) %></td>
        <td><%= link_to 'Destroy', notification, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

