<div class="container">
  <div class="row d-flex">

    <% @magazines.each do |magazine| %>

      <div class="col">
        <div class="card text-center" style="width: 20rem;">
          <iframe src=<%= magazine.url %>  seamless="seamless" scrolling="no" frameborder="0" allowtransparency="true" allowfullscreen="true" class="card-img-top" ></iframe>
          <div class="card-body">
            <h5 class="card-title"><%= magazine.title %></h5>
            <h5 class="card-title"><%= magazine.created_at.to_date %></h5>
            <%= link_to 'VIEW', magazine, class: "btn btn-info btn-sm w-100" %>
          </div>
        </div>
      </div>

    <% end %>
  </div>
</div>
